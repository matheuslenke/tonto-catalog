mode Trust

quality Trust_Degree

quality Belief_Intensity

quality Performance_Level

quality Manifestation_Likelihood

category Complex_Intention specializes Intention {
    [2..*] -- is_component_part_of_complex_intention -- [0..*] Complex_Intention 
    [1] -- [0..*] Trust 
    @characterization 
    [1..*] -- intention_inhreres_in_trustor -- [0..1] Trustor 
    [1..*] -- hurt_by_loss_situation -- [0..*] Loss_Situation 
    [0..*] -- hurt_by_loss_event -- [0..*] Loss_Event 
    @characterization 
    [0..*] -- inheres_in_agent -- [1] Agent 
}

category Atomic_Intention specializes Intention {
    [2..*] -- is_component_part_of_complex_intention -- [0..*] Complex_Intention 
    [1] -- [0..*] Trust 
    @characterization 
    [1..*] -- intention_inhreres_in_trustor -- [0..1] Trustor 
    [1..*] -- hurt_by_loss_situation -- [0..*] Loss_Situation 
    [0..*] -- hurt_by_loss_event -- [0..*] Loss_Event 
    @characterization 
    [0..*] -- inheres_in_agent -- [1] Agent 
}

category Trustworthiness_Evidence specializes Endurant 

kind Social_System specializes Object 

